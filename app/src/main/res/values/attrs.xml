<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundAngleImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
    </declare-styleable>

    <!--ActionBar  TitleBar-->
    <declare-styleable name="TitleBar">
        <!--标题栏的高度，默认52dp-->
        <attr name="tb_barHeight" format="dimension" />
        <!--是否是沉浸式标题栏，默认是false-->
        <attr name="tb_immersive" format="boolean" />
        <!--左右图标和文字的padding-->
        <attr name="tb_actionPadding" format="dimension" />
        <attr name="tb_sideTextPadding" format="dimension" />
        <!--文字的颜色-->
        <attr name="tb_sideTextColor" format="color" />
        <attr name="tb_titleTextColor" format="color" />
        <attr name="tb_subTitleTextColor" format="color" />
        <attr name="tb_actionTextColor" format="color" />
        <!--文字的大小-->
        <attr name="tb_sideTextSize" format="dimension" />
        <attr name="tb_titleTextSize" format="dimension" />
        <attr name="tb_subTitleTextSize" format="dimension" />
        <attr name="tb_actionTextSize" format="dimension" />
        <!--文字的内容以及图标内容-->
        <attr name="tb_leftImageResource" format="reference" />
        <attr name="tb_leftText" format="string" />
        <attr name="tb_titleText" format="string" />
        <attr name="tb_subTitleText" format="string" />
        <attr name="tb_dividerColor" format="color" />
    </declare-styleable>
    <attr name="xui_switch_alpha_pressed" format="boolean" />
    <attr name="xui_switch_alpha_disabled" format="boolean" />
    <attr name="xui_alpha_pressed" format="float" />
    <attr name="xui_alpha_disabled" format="float" />

    <!--**********************************************
  *                  xui topbar                   *
  ***********************************************-->
    <attr name="xui_actionbar_color" format="color" />

    <attr name="xui_actionbar_height" format="dimension" />
    <attr name="xui_actionbar_title_text_size" format="dimension" />
    <attr name="xui_actionbar_action_text_size" format="dimension" />
    <attr name="xui_actionbar_sub_text_size" format="dimension" />
    <attr name="xui_actionbar_action_padding" format="dimension" />
    <attr name="xui_actionbar_side_text_padding" format="dimension" />
</resources>